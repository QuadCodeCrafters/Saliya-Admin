<UserControl x:Class="ModernApp.Top_Control_Bar.Top_Bar_Controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernApp.Top_Control_Bar"
               xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
              Loaded="UserControl_Loaded">

    <Border  Background="White" CornerRadius="10" Padding="10" materialDesign:ShadowAssist.ShadowDepth="Depth3">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

           
            <!-- Notifications Button -->
            <Button Grid.Column="2" Style="{StaticResource MaterialDesignIconButton}"
                    Click="NotificationButton_Click">
                <materialDesign:PackIcon Kind="Bell" />
            </Button>

            <!-- Notification Dropdown -->
            <Popup Name="NotificationsPopup"  Placement="Bottom" StaysOpen="False" IsOpen="{Binding IsNotificationPopupOpen}">
                <Border Background="White" CornerRadius="10" Padding="10" Width="200">
                    <StackPanel>
                        <TextBlock Name="adminName" Text="Admin Name" FontWeight="Bold" Margin="5"/>
                        <Separator/>
                      
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Profile Menu -->
            <Button Grid.Column="4" Style="{StaticResource MaterialDesignIconButton}" Click="ProfileButton_Click">
                <Ellipse Width="30" Height="30" Fill="Orange"/>
            </Button>
            <Popup Name="ProfilePopup"  Placement="Bottom" StaysOpen="False">
                <Border Background="White" CornerRadius="10" Padding="10" Width="200">
                    <StackPanel>
                        <TextBlock Name="adminName2"  FontWeight="Bold" Margin="5"/>
                        <Separator/>
                       
                        <Button Content="Logout" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Red" Click="LogoutButton_Click"/>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Border>
</UserControl>
