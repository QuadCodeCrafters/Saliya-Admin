<UserControl x:Class="ModernApp.MVC.View.ReportSubviews.SalesReportPreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
            Background="White">

    <Grid Margin="20">
        <!-- Header Section -->
        <Grid VerticalAlignment="Top" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Company Logo -->
            <Image Source="pack://application:,,,/Images/304778802_418138250302865_3903839059240116346_n-removebg-preview (1).png" 
                   Width="80" Height="80" Margin="10"/>

            <!-- Header Details -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
                <TextBlock Text="Saliya Auto Care" FontSize="30" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Text="Sales Report" FontSize="18" FontWeight="SemiBold" Foreground="#34495E"/>
                <TextBlock Text="{Binding CurrentDate, StringFormat='Date: {0:MMMM dd, yyyy}'}" 
                           FontSize="14" Foreground="#7F8C8D"/>
            </StackPanel>
        </Grid>
        <!-- Filters Section -->
        <StackPanel Orientation="Horizontal" Margin="357,34,0,491" HorizontalAlignment="Left">
            <TextBlock Text="From:" VerticalAlignment="Center" FontSize="14" Margin="5"/>
            <DatePicker Name="FromDatePicker" Width="150"/>
            <TextBlock Text="To:" VerticalAlignment="Center" FontSize="14" Margin="5"/>
            <DatePicker Name="ToDatePicker" Width="150"/>
            <Button Content="Filter" Margin="5" Click="FilterButton_Click"/>
        </StackPanel>

        <!-- DataGrid Section -->
        <DataGrid Name="SalesReportDataGrid" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  AlternatingRowBackground="#F7F9FA" 
                  GridLinesVisibility="Horizontal" 
                  Background="White"
                  RowHeight="40" 
                  BorderBrush="#BDC3C7"
                  Foreground="#2C3E50" 
                  FontSize="14" Margin="0,180,0,80">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sale ID" Binding="{Binding SaleID}" Width="100"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="200"/>
                <DataGridTextColumn Header="Product Type" Binding="{Binding ProductType}" Width="150"/>
                <DataGridTextColumn Header="Sales Amount" Binding="{Binding SalesAmount, StringFormat=C}" Width="150"/>
                <DataGridTextColumn Header="Sale Date" Binding="{Binding SaleDate, StringFormat={}{0:MMMM dd, yyyy}}" Width="155"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer Section -->
        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                   Margin="0,0,0,50" FontSize="12" Foreground="#7F8C8D" TextAlignment="Center">
            © 2024 Saliya Auto Care, All Rights Reserved | Contact: info@saliyaautocare.com
        </TextBlock>

        <!-- Footer Section (DockPanel for buttons, excluded from print) -->
        <DockPanel Name="FooterDockPanel" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Export to PDF" DockPanel.Dock="Right" Width="120" Height="30" Margin="5" FontWeight="Bold" Background="#3498DB" Foreground="White" BorderBrush="#2980B9" Click="ExportPdfButton_Click"/>
            <Button Content="Print" DockPanel.Dock="Right" Width="120" Margin="500,0,0,0" FontWeight="Bold" Background="#2ECC71" Foreground="White" BorderBrush="#27AE60" Click="Buttonprint_Click"/>
        </DockPanel>
    </Grid>
</UserControl>
