<UserControl x:Class="ModernApp.MVVM.View.SystemDiagnosisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#F5F5F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="System Diagnosis"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                   Margin="0,0,0,20" />

        <!-- TabControl with Material Design styling -->
        <TabControl Grid.Row="1" Margin="10" Background="White"
                   >

            <!-- Processes Tab -->
            <TabItem Header="Processes">
                <Border CornerRadius="8" Background="White" Margin="10" Padding="10" 
                       >
                    <materialDesign:Card Margin="10" Padding="10" Background="White" >
                        <DataGrid Name="ProcessesGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                              Style="{StaticResource MaterialDesignDataGrid}" RowHeight="48">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Process Name" Binding="{Binding Name}" Width="*" />
                                <DataGridTextColumn Header="CPU (%)" Binding="{Binding CPU}" Width="100" />
                                <DataGridTextColumn Header="Memory (MB)" Binding="{Binding Memory}" Width="150" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </materialDesign:Card>
                </Border>
            </TabItem>

            <!-- Performance Tab -->
            <TabItem Header="Performance">
                <StackPanel Margin="10">
                    <!-- CPU Usage Section -->
                    <Border CornerRadius="8" Background="White" Margin="10" Padding="10" 
                          >
                        <materialDesign:Card Margin="10" Padding="10" Background="White" >
                            <Grid>
                                <TextBlock Text="CPU Usage" FontSize="20" FontWeight="Bold" />
                                <TextBlock Text="{Binding CpuUsagePercentage, StringFormat={}{0:F1}%}" 
                                       FontSize="16" Foreground="Gray" Margin="0,5" />
                                <lvc:CartesianChart Name="CpuUsageChart" Height="150" Margin="5">
                                    <lvc:CartesianChart.Series>
                                        <lvc:LineSeries Title="CPU Usage" Values="{Binding CpuUsageValues}" 
                                                    PointGeometrySize="0" StrokeThickness="2" />
                                    </lvc:CartesianChart.Series>
                                </lvc:CartesianChart>
                            </Grid>
                        </materialDesign:Card>
                    </Border>

                    <!-- Memory Usage Section -->
                    <Border CornerRadius="8" Background="White" Margin="10" Padding="10" 
                          >
                        <materialDesign:Card Margin="10" Padding="10" Background="White" >
                            <Grid>
                                <TextBlock Text="Memory Usage" FontSize="20" FontWeight="Bold" />
                                <TextBlock Text="{Binding MemoryUsagePercentage, StringFormat={}{0:F1}%}" 
                                       FontSize="16" Foreground="Gray" Margin="0,5" />
                                <lvc:CartesianChart Name="MemoryUsageChart" Height="150" Margin="5">
                                    <lvc:CartesianChart.Series>
                                        <lvc:LineSeries Title="Memory Usage" Values="{Binding MemoryUsageValues}" 
                                                    PointGeometrySize="0" StrokeThickness="2" />
                                    </lvc:CartesianChart.Series>
                                </lvc:CartesianChart>
                            </Grid>
                        </materialDesign:Card>
                    </Border>
                </StackPanel>
            </TabItem>

            <!-- Services Tab -->
            <TabItem Header="Services">
                <Border CornerRadius="8" Background="White" Margin="10" Padding="10" 
                       >
                    <materialDesign:Card Margin="10" Padding="10" Background="White" >
                    <DataGrid Name="ServicesGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                              Style="{StaticResource MaterialDesignDataGrid}" RowHeight="48">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Service Name" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150" />
                        </DataGrid.Columns>
                    </DataGrid>
                    </materialDesign:Card>
                </Border>
            </TabItem>

            <!-- Network Interfaces Tab -->
            <TabItem Header="Network Interfaces">
                <Border CornerRadius="8" Background="White" Margin="10" Padding="10" 
                       >
                    <materialDesign:Card Margin="10" Padding="10" Background="White" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <DataGrid Name="NetworkInterfacesGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                                  Style="{StaticResource MaterialDesignDataGrid}" RowHeight="48" Margin="5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Interface Name" Binding="{Binding Name}" Width="*" />
                                <DataGridTextColumn Header="Speed (Mbps)" Binding="{Binding Speed}" Width="150" />
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <lvc:CartesianChart Grid.Row="1" Name="NetworkConnectivityChart" Height="200" Margin="5">
                            <lvc:CartesianChart.Series>
                                <lvc:LineSeries Title="Upload Speed (Mbps)" Values="{Binding UploadSpeedValues}" 
                                                PointGeometrySize="0" StrokeThickness="2" Stroke="Green" />
                                <lvc:LineSeries Title="Download Speed (Mbps)" Values="{Binding DownloadSpeedValues}" 
                                                PointGeometrySize="0" StrokeThickness="2" Stroke="Blue" />
                            </lvc:CartesianChart.Series>
                        </lvc:CartesianChart>
                    </Grid>
                    </materialDesign:Card>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
