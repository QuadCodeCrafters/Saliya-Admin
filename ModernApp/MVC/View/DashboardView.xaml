<UserControl x:Class="ModernApp.MVVM.View.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900" Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1976D2" Offset="0" />
                    <GradientStop Color="#2196F3" Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>
            <TextBlock Text="Admin POS Dashboard"
               FontSize="28"
               FontWeight="Bold"
               Foreground="White"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Margin="20,10,0,10" />
        </Grid>


        <!-- Main Content -->
        <Grid Margin="20,70,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Welcome and Stats Section -->
            <StackPanel Orientation="Vertical" Margin="0,20,0,40">
                <TextBlock Text="Welcome, Admin"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#1976D2"
                           Margin="10,0" />

                <UniformGrid Columns="4" HorizontalAlignment="Stretch" Margin="0,20,0,20">
                    <!-- Card 1 -->
                    <Border Background="{DynamicResource MaterialDesignCardBackground}"
                            CornerRadius="10"
                            Margin="10"
                            Padding="20"
                            Effect="{DynamicResource MaterialDesignElevationShadow}">
                        <StackPanel>
                            <TextBlock Text="Daily Sales"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#2196F3" />
                            <TextBlock Text="$1,200"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#1976D2" />
                        </StackPanel>
                    </Border>

                    <!-- Card 2 -->
                    <Border Background="{DynamicResource MaterialDesignCardBackground}"
                            CornerRadius="10"
                            Margin="10"
                            Padding="20"
                            Effect="{DynamicResource MaterialDesignElevationShadow}">
                        <StackPanel>
                            <TextBlock Text="Monthly Revenue"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#2196F3" />
                            <TextBlock Text="$45,000"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#1976D2" />
                        </StackPanel>
                    </Border>

                    <!-- Card 3 -->
                    <Border Background="{DynamicResource MaterialDesignCardBackground}"
                            CornerRadius="10"
                            Margin="10"
                            Padding="20"
                            Effect="{DynamicResource MaterialDesignElevationShadow}">
                        <StackPanel>
                            <TextBlock Text="Total Customers"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#2196F3" />
                            <TextBlock Text="350"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#1976D2" />
                        </StackPanel>
                    </Border>

                    <!-- Card 4 -->
                    <Border Background="{DynamicResource MaterialDesignCardBackground}"
                            CornerRadius="10"
                            Margin="10"
                            Padding="20"
                            Effect="{DynamicResource MaterialDesignElevationShadow}">
                        <StackPanel>
                            <TextBlock Text="Stock Alerts"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#2196F3" />
                            <TextBlock Text="5 items low"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#1976D2" />
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>

            <!-- Graphs and Data -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Chart Placeholder -->
                <Border Background="{DynamicResource MaterialDesignCardBackground}"
                        CornerRadius="10"
                        Margin="10"
                        Padding="10"
                        Grid.Column="0"
                        Effect="{DynamicResource MaterialDesignElevationShadow}">
                    <TextBlock Text="Sales Overview (Graph)"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#1976D2" />
                </Border>

                <!-- Data Grid -->
                <Border Background="{DynamicResource MaterialDesignCardBackground}"
                        CornerRadius="10"
                        Margin="10"
                        Padding="10"
                        Grid.Column="1"
                        Effect="{DynamicResource MaterialDesignElevationShadow}">
                    <DataGrid AutoGenerateColumns="True"
                              IsReadOnly="True"
                              ColumnHeaderStyle="{DynamicResource MaterialDesignDataGridColumnHeader}"
                              Style="{DynamicResource MaterialDesignDataGrid}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" Binding="{Binding Product}" />
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
