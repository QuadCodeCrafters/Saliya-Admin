<UserControl x:Class="ModernApp.MVVM.View.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:ModernApp.MVVM.View"
             mc:Ignorable="d"
             Background="White">

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" ShadowDepth="1" BlurRadius="9" Color="#888" Opacity="0.3" />
    </UserControl.Resources>

    <Grid Background="#F4F6F9" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,20">
            <TextBlock Text="Inventory Dashboard" FontSize="24" FontWeight="Bold" Foreground="#007AFF" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="230,0,0,0">
                <Button Name="btnAddItemInventory" Content="Add Item" Width="150" Height="40" 
                        Background="#007AFF" Foreground="White" Margin="5"
                        Click="btnAddItemInventory_Click"/>
                <Button Name="btnUpdateInventory" Content="Update item" Width="150" Height="40" 
Background="#4CAF50" Foreground="White" Margin="5" Click="btnUpdateInventory_Click"/>
                <Button Name="btnInventoryDetails" Content="View Item" Width="150" Height="40" 
                        Background="#4CAF50" Foreground="White" Margin="5"
                        Click="btnInventoryDetails_Click"/>
                <Button Name="btnSparePartsInventory" Content="Spare Parts" Width="150" Height="40" 
                        Background="#FF3B30" Foreground="White" Margin="5" Click="btnSparePartsInventory_Click"/>
                

            </StackPanel>
        </StackPanel>

        <!-- Inventory Metrics Section -->
        <Grid Grid.Row="1" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Background="White" CornerRadius="12" Width="200" Height="100" Padding="15" Margin="10" Style="{StaticResource HoverableBorderStyle}" >
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Total Items" FontSize="14" Foreground="#8E8E93" TextAlignment="Center"/>
                    <TextBlock Name="TotalItemsTextBlock" Text="500" FontSize="28" FontWeight="Bold" Foreground="#333"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="12" Width="200" Height="100" Padding="15" Margin="10" Grid.Column="1" Style="{StaticResource HoverableBorderStyle}" >
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Out of Stock" FontSize="14" Foreground="#8E8E93" TextAlignment="Center"/>
                    <TextBlock Text="20" FontSize="28" FontWeight="Bold" Foreground="#FF3B30"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="12" Width="200" Height="100" Padding="15" Margin="10" Grid.Column="2" Style="{StaticResource HoverableBorderStyle}" >
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Reorders Needed" FontSize="14" Foreground="#8E8E93" TextAlignment="Center"/>
                    <TextBlock Text="15" FontSize="28" FontWeight="Bold" Foreground="#007AFF"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="12" Width="200" Height="100" Padding="15" Margin="10" Grid.Column="3" Style="{StaticResource HoverableBorderStyle}" >
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Low Stock" FontSize="14" Foreground="#8E8E93" TextAlignment="Center"/>
                    <TextBlock Text="10" FontSize="28" FontWeight="Bold" Foreground="#FF9500"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Inventory Overview Charts -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Bar Chart -->
            <Border Background="White" CornerRadius="8" Padding="20" Effect="{StaticResource ShadowEffect}" Grid.Column="0" Margin="10">
                <StackPanel>
                    <TextBlock Text="Stock Levels" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="10"/>
                    <lvc:CartesianChart Name="BarChart" Margin="10" Height="250">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Labels="{Binding XLabels}" Foreground="#666">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="1" IsEnabled="False"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.Series>
                            <lvc:ColumnSeries Title="Stock Levels" Fill="#007bff" Values="20"/>
                            <lvc:ColumnSeries Title="Stock Levels" Fill="#007bff" Values="30"/>
                        </lvc:CartesianChart.Series>
                    </lvc:CartesianChart>
                </StackPanel>
            </Border>

            <!-- Pie Chart -->
            <Border Background="White" CornerRadius="8" Padding="20" Effect="{StaticResource ShadowEffect}" Grid.Column="1" Margin="10">
                <StackPanel>
                    <TextBlock Text="Category Distribution" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="10"/>
                    <lvc:PieChart Name="CategoryPieChart" Margin="10" Height="250">
                        <lvc:PieChart.Series>
                            <lvc:PieSeries Title="Electronics" Values="5" Fill="#4CAF50"/>
                            <lvc:PieSeries Title="Furniture" Values="3" Fill="Yellow"/>
                            <lvc:PieSeries Title="Clothing" Values="6" Fill="MediumOrchid"/>
                        </lvc:PieChart.Series>
                    </lvc:PieChart>
                </StackPanel>
            </Border>
        </Grid>

        <!-- UserControl Frame -->
        <Border Margin="10,10,10,10" CornerRadius="10" BorderThickness="1" Grid.RowSpan="3">
            <Frame Name="fSparePartsContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>
        <!-- UserControl Frame -->
        <Border Margin="10,65,10,10" CornerRadius="10" BorderThickness="1" Grid.RowSpan="3">
            <Frame Name="fInventoryContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>
    </Grid>
</UserControl>
