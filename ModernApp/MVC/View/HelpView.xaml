<UserControl x:Class="ModernApp.MVVM.View.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernApp.MVVM.View"
         mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#f5f5f7">
    <Grid>
        <Grid>
            <!-- Header Section -->
            <Grid Background="#e3e3e5" VerticalAlignment="Top" Height="100">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="POS Help Center" FontSize="30" FontWeight="Bold" Foreground="#333"/>
                    <TextBlock Text="Your guide to mastering the Point of Admin system" FontSize="14" Foreground="#555"/>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,100,0,40">
                <StackPanel Orientation="Vertical" Margin="20">
                    <!-- First Row -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="10,0" Padding="10" 
           BorderBrush="#ccc" BorderThickness="1" Height="120" Opacity="0.95">
                            <StackPanel>
                                <TextBlock Text="Sales" FontSize="18" FontWeight="SemiBold" Foreground="#007aff"/>
                                <TextBlock Text="Process transactions, issue receipts, and manage refunds effectively with the Sales module." FontSize="14" TextWrapping="Wrap"/>
                                <Button Name="BtnHelpSales" Content="➔" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" Cursor="Hand" HorizontalAlignment="Right" Click="BtnHelpSales_Click"/>

                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0" Padding="10" 
           BorderBrush="#ccc" BorderThickness="1" Height="120" Opacity="0.95">
                            <StackPanel>
                                <TextBlock Text="Inventory" FontSize="18" FontWeight="SemiBold" Foreground="#007aff"/>
                                <TextBlock Text="Track stock levels, manage products, and organize categories in the Inventory module." FontSize="14" TextWrapping="Wrap"/>
                                <Button Content="➔" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" Cursor="Hand" HorizontalAlignment="Right" Click="BtnHelpInventory_Click"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Second Row -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="10,0" Padding="10" 
           BorderBrush="#ccc" BorderThickness="1" Height="120" Opacity="0.95">
                            <StackPanel>
                                <TextBlock Text="Employee" FontSize="18" FontWeight="SemiBold" Foreground="#007aff"/>
                                <TextBlock Text="Add and manage employees, assign roles, and monitor user activity securely." FontSize="14" TextWrapping="Wrap"/>
                                <Button Content="➔"  Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" Cursor="Hand" HorizontalAlignment="Right" Click="BtnHelpEmployee_Click"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0" Padding="10" 
           BorderBrush="#ccc" BorderThickness="1" Height="120" Opacity="0.95">
                            <StackPanel>
                                <TextBlock Text="Reports" FontSize="18" FontWeight="SemiBold" Foreground="#007aff"/>
                                <TextBlock Text="Generate detailed reports on sales, inventory, and employee performance." FontSize="14" TextWrapping="Wrap"/>
                                <Button Content="➔"  Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" Cursor="Hand" HorizontalAlignment="Right" Click="BtnHelpReports_Click"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Third Row -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="10,0" Padding="10" 
           BorderBrush="#ccc" BorderThickness="1" Height="120" Opacity="0.95">
                            <StackPanel>
                                <TextBlock Text="System" FontSize="18" FontWeight="SemiBold" Foreground="#007aff"/>
                                <TextBlock Text="Customize POS system configurations to suit your business requirements." FontSize="14" TextWrapping="Wrap"/>
                                <Button Content="➔"  Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" Cursor="Hand" HorizontalAlignment="Right" Click="BtnHelpSystem_Click"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0" Padding="10" 
           BorderBrush="#ccc" BorderThickness="1" Height="120" Opacity="0.95">
                            <StackPanel>
                                <TextBlock Text="Settings" FontSize="18" FontWeight="SemiBold" Foreground="#007aff"/>
                                <TextBlock Text="Adjust and manage application preferences and advanced system settings." FontSize="14" TextWrapping="Wrap"/>
                                <Button Content="➔"  Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" Cursor="Hand" HorizontalAlignment="Right" Click="BtnHelpSettings_Click"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Fourth Row -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="10,0" Padding="10" 
           BorderBrush="#ccc" BorderThickness="1" Height="120" Opacity="0.95">
                            <StackPanel>
                                <TextBlock Text="Help" FontSize="18" FontWeight="SemiBold" Foreground="#007aff"/>
                                <TextBlock Text="Browse user guides and tutorials to get the most out of your POS system." FontSize="14" TextWrapping="Wrap"/>
                                <Button Content="➔"  Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" Cursor="Hand" HorizontalAlignment="Right" Click="BtnHelpHelp_Click"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10,0" Padding="10" 
           BorderBrush="#ccc" BorderThickness="1" Height="120" Opacity="0.95">
                            <StackPanel>
                                <TextBlock Text="Support" FontSize="18" FontWeight="SemiBold" Foreground="#007aff"/>
                                <TextBlock Text="Contact customer support for assistance or troubleshooting." FontSize="14" TextWrapping="Wrap"/>
                                <Button Content="➔"  Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" Cursor="Hand" HorizontalAlignment="Right" Click="BtnHelpSupport_Click"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Frame overlay -->




            <!-- Footer Section -->
            <Grid Background="#333" VerticalAlignment="Bottom" Height="40">
                <TextBlock Text="© 2024 Saliya Outo Plus. All rights reserved." Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
            </Grid>
            <!-- Border with a Frame for loading UserControls -->
            <Border  Margin="0,2,0,40" CornerRadius="10" BorderThickness="1">
                <Frame Name="FHelpViewContainer" Margin="-1,-1,-1,-1"/>
            </Border>
        </Grid>

    </Grid>
</UserControl>
