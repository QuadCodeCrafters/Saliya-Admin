<UserControl x:Class="ModernApp.MVC.View.HelpSubViews.HelpInventroySubViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernApp.MVC.View.HelpSubViews"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="*" />
            <!-- Content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Place the StackPanel in the correct row -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,20">
            <Button Name="btnBackHelpDashboard"
              Style="{StaticResource MaterialDesignFlatButton}"
              VerticalAlignment="Center" Click="btnBackHelpDashboard_Click"
             >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ArrowLeft" Width="20" Height="20" Margin="0,0,5,0" />
                    <TextBlock Text="Back" VerticalAlignment="Center" FontSize="14" />
                </StackPanel>
            </Button>
            <TextBlock Text="Sales Help"
                 FontSize="24"
                 FontWeight="Bold"
                 Foreground="#007AFF"
                 VerticalAlignment="Center"
                 Margin="20,0,0,0" />
        </StackPanel>
    </Grid>

</UserControl>
